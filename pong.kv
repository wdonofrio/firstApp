#:kivy 1.0.9

<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 200, 25
    canvas.before:
        # Draw a patterned background
        Color:
            rgb: 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, 10, 10, 10]

<PongGame>:
    ball: pong_ball
    player: player
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70
        center_x: root.width / 2
        top: root.top - 50
        text: str(root.player.score)

    PongBall:
        id: pong_ball
        center: self.parent.center
        
    PongPaddle:
        id: player
        x: root.x
        center_x: root.center_x

<MainMenu>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [60, 60, 0, 0]
    Label:
        text: 'Welcome to Bricks!'
        font_size: 70
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
