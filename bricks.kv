#:kivy 1.0.9



<Game>:
    ball: game_ball
    player: player

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 2
        top: root.top

    GameBall:
        id: game_ball
        center: self.parent.center

    PlayerPaddle:
        id: player
        x: root.x
        center_x: root.center_x

<MainMenu>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Welcome to Bricks!'
        font_size: 70
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
