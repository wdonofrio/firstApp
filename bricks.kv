#:kivy 1.0.9

<Brick>:
    canvas:
        Color:
            rgba: 0.4, 0.4, 0.4, 1  # Set the color of the brick (e.g., gray)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5, 5, 5, 5]  # Set the corner radius of the rounded square

<GameBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PlayerPaddle>:
    size: 200, 25
    canvas.before:
        Color:
            rgb: 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10, 10, 10, 10]

<Game>:
    ball: game_ball
    player: player
    
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    Label:
        font_size: 70
        center_x: root.width / 2
        top: root.top - 10

    GameBall:
        id: game_ball
        center: self.parent.center
        
    PlayerPaddle:
        id: player
        x: root.x
        center_x: root.center_x

<MainMenu>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Welcome to Bricks!'
        font_size: 70
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
